<html>
    <head>
        <title>List of Stylists</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h2>Welcome to the Stylist List</h2>
                <form action='/stylists' method='post'>
                    <div class='form-group'>
                        <label for="name">Stylists name:</label>
                        <input id="name" name="name" type="text">
                        <button type='submit'>Add Stylist</button>
                    </div>
                </form>
                <form action='/delete_stylists' method='post'>
                    <div class='form-group'>
                        <button type='submit'>Delete stylists</button>
                    </div>
                </form>

                <form action='/delete_clients' method='post'>
                    <div class='form-group'>
                        <button type='submit'>Delete clients</button>
                    </div>
                </form>

            {% if stylists is not empty %}
                <ul>
                    {% for stylist in stylists %}
                            <li><a href="/stylists/{{ stylist.getId }}"> {{ stylist.getName }} </a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no stylists to display enter a stylist above</p>
            {% endif %}
        </div>
    </body>
</html>
