<html>
    <head>
        <title>List of Stylists</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Welcome to the Stylist List</h1>
            <form action='/stylists' method='post' class='form-inline'>
                <div class='form-group'>
                    <input id="name" name="name" type="text" class='form-control' placeholder="Enter Stylist's Name">
                    <button type='submit' class='btn btn-success'>Add Stylist</button>
                </div>
            </form>

            {% if stylists is not empty %}
                <ul>
                    {% for stylist in stylists %}
                            <li><a href="/stylists/{{ stylist.getId }}"> {{ stylist.getName }} </a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no stylists to display enter a stylist above</p>
            {% endif %}

            <p>_______________________________________________________________</p><br>
            <form action='/delete_stylists' method='post'>
                <div class='form-group'>
                    <button type='submit' class='btn btn-danger'>Delete all stylists</button>
                </div>
            </form>
            <form action='/delete_clients' method='post'>
                <div class='form-group'>
                    <button type='submit' class='btn btn-danger'>Delete all clients</button>
                </div>
            </form>
        </div>
    </body>
</html>
